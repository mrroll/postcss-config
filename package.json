{
  "name": "@mrroll/postcss-config",
  "version": "1.80.0",
  "license": "MIT",
  "engines": {
    "node": "^14.19.0 || ^16.10.0 || >=17.0.0"
  },
  "repository": "https://github.com/mrroll/postcss-config",
  "author": "mrroll",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*.js"
  },
  "files": [
    "/lib/**/*"
  ],
  "scripts": {
    "build": "npm-run-all --sequential build:clean build:typescript build:alias",
    "build:alias": "tsc-alias --project build.tsconfig.json --verbose",
    "build:clean": "rimraf ./lib",
    "build:typescript": "cross-env NODE_ENV=production TZ=UTC tsc --project build.tsconfig.json",
    "dev": "npm-run-all --parallel dev:watch dev:build",
    "dev:build": "cross-env NODE_ENV=development TZ=UTC nodemon --config build.nodemon.json",
    "dev:watch": "cross-env NODE_ENV=development TZ=UTC TS_NODE_BASEURL=. nodemon --config nodemon.json ./src/dev.ts"
  },
  "volta": {
    "node": "16.18.0",
    "yarn": "1.22.19"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.18",
    "postcss-discard-comments": "^5.1.2",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.8.2",
    "rfs": "^9.0.6",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@mrroll/eslint-config-typescript": "^0.33.0",
    "@swc/core": "^1.3.9",
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^16.11.66",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.8.4",
    "vite-tsconfig-paths": "^3.5.1",
    "vitest": "^0.24.3",
    "yalc": "^1.0.0-pre.53"
  }
}
