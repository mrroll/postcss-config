{
  "name": "@mrroll/postcss-config",
  "version": "1.271.0",
  "license": "MIT",
  "engines": {
    "node": ">=16.10.0"
  },
  "repository": "https://github.com/mrroll/postcss-config",
  "author": "mrroll",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*.js"
  },
  "files": [
    "/lib/**/*"
  ],
  "scripts": {
    "build": "npm-run-all --sequential build:clean build:typescript build:alias",
    "build:alias": "tsc-alias --project build.tsconfig.json --verbose",
    "build:clean": "rimraf ./lib",
    "build:typescript": "cross-env NODE_ENV=production TZ=UTC tsc --project build.tsconfig.json",
    "dev": "npm-run-all --parallel dev:watch dev:build",
    "dev:build": "cross-env NODE_ENV=development TZ=UTC nodemon --config build.nodemon.json",
    "dev:watch": "cross-env NODE_ENV=development TZ=UTC TS_NODE_BASEURL=. nodemon --config nodemon.json ./src/dev.ts"
  },
  "volta": {
    "node": "18.17.1",
    "yarn": "1.22.19"
  },
  "dependencies": {
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28",
    "postcss-discard-comments": "^6.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^9.1.1",
    "rfs": "^10.0.0",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@mrroll/eslint-config-typescript": "^0.222.0",
    "@swc/core": "^1.3.78",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^18.17.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.2",
    "yalc": "^1.0.0-pre.53"
  }
}
